const express = require("express");

var exphbs = require("express-handlebars");


const app = express();

app.engine("handlebars", exphbs());
app.set("view engine", "handlebars");


app.get("/", (req, res) => {

    res.render("home")
});


app.listen(5000, () => {
  console.log("App is listening on Port 5000");
});
